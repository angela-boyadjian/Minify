{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es2016",
	  "noImplicitAny": true,
	  "strictNullChecks": true,
	  "moduleResolution": "node",
	  "sourceMap": true,
	  "outDir": "dist",
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types"],
	  "paths": {
		"*": [
		  "node_modules/*"
		]
	  }
	},
	"include": [
	  "srcs/**/*"
	]
}